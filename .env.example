# Server Configuration
NODE_ENV=development
PORT=8000

# Database
# For local development (PostgreSQL on localhost)
DATABASE_URL=postgresql://postgres:password@localhost:5432/backend_db?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=dev-secret-key-change-in-production-min-32-characters
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production-min-32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI (Optional - only needed for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (Optional - only needed for email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@example.com

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3001
