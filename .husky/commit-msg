#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Expected format: type(scope): subject
# Example: feat(auth): add login endpoint

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex pattern for conventional commits
pattern="^(feat|fix|docs|style|refactor|perf|test|chore|build|ci)(\(.+\))?: .{1,100}"

if ! echo "$commit_msg" | grep -Eq "$pattern"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message should follow: type(scope): subject"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, chore, build, ci"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add JWT authentication"
  echo "  fix(api): resolve CORS issue"
  echo "  docs(readme): update installation steps"
  echo ""
  exit 1
fi

